{
  "ecmaFeatures": {
    "arrowFunctions": true,
    "modules": true,
    "classes": true
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": ["plugin:prettier/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "sourceType": "module",
    "prettier/prettier": "error"
  }
}
